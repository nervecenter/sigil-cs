    <title>@ViewBag.Title</title>

    <style>
        .mb-30 {
            margin-bottom: 30px;
        }

        .splash-container {
            width: 100%;
            height: 100vh;
            background-image: url(../../Content/Images/book.jpg);
            background-size: cover;
