</head>
<body class="page">
    <div class="wrap">
        @Html.Partial( "_Header" )

        <div class="container splash-container mb-30">
            <div class="container hero-container">
                <div class="row" style="margin-top:35vh;">
                    <div class="col-lg-12 white-text-centered">
                        <img class="img-responsive" src="~/Content/Images/logo-600.png" style="width:100%;" />
                        <h4 style="font-size:20px;">Take your public relations to the next level.</h4>
                    </div>
                </div>
            </div>
            <div class="container sections-container">
                <div class="row">
                    <div class="col-lg-12 white-text-centered">
