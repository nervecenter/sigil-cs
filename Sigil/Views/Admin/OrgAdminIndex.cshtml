@using Sigil.ViewModels
@model OrgAdminIndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        width:1000px;
    }

    .img-relief {
        box-shadow: 0px 5px 10px 5px #898989;
    }
</style>

<div class="container">
    <h2>@Model.thisOrg.orgName Admin Panel</h2>
    <div class="panel" style="text-align:center;">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6"><h4>Product name:</h4></div>
                <div class="col-lg-6"><h4>Product URL:</h4></div>
            </div>
            @foreach ( var product in Model.thisOrgProducts ) {
                <div class="row" style="margin-bottom:10px;">
                    <div class="col-lg-6">@product.ProductName</div>
                    <div class="col-lg-6">@product.ProductURL - <a href="/@Model.thisOrg.orgURL/@product.ProductURL/">www.sigil.tech/@Model.thisOrg.orgURL/@product.ProductURL/</a></div>
                </div>
            }
            @using ( Html.BeginForm( "AddOrgProduct", "Admin", new { orgURL = Model.thisOrg.orgURL }, FormMethod.Post, new { role = "form" } ) ) {
                @Html.AntiForgeryToken();
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input type="text" class="form-control" name="product-name" id="product-name" placeholder="Product Name" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input type="text" class="form-control" name="product-url" id="product-url" placeholder="Product URL" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <button class="btn btn-success form-control" type="submit">Create New Product</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
    </div>
    <div class="panel">
        <div class="panel-body">
            <img class="img-rounded img-responsive img-relief org-banner-small" src="@Model.thisOrg.Image.banner" />
            <h4>Recommended banner size: 1000 x 200</h4>
            @using ( Html.BeginForm( "UploadOrgBanner", "Admin", new { orgURL = Model.thisOrg.orgURL }, FormMethod.Post, new { enctype = "multipart/form-data", role = "form" } ) ) {
                @Html.AntiForgeryToken();
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-btn">
                            <span class="btn btn-default btn-file">
                                Browse <input type="file" name="imgBanner" id="imgBanner">
                            </span>
                        </div>
                        <input class="form-control" readonly="" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success form-control">Upload new banner</button>
                </div>

            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="panel">
                <div class="panel-body">
                    <img src="@Model.thisOrg.Image.icon_100" class="img-rounded img-responsive img-relief" style="margin:0px auto 15px;" />
                    @using ( Html.BeginForm( "UploadOrgIcon100", "Admin", new { orgURL = Model.thisOrg.orgURL }, FormMethod.Post, new { enctype = "multipart/form-data", role = "form" } ) ) {
                        @Html.AntiForgeryToken();
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        Browse <input type="file" name="img100" id="img100" />
                                    </span>
                                </div>
                                <input class="form-control" readonly="" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success form-control">Upload new icon</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel">
                <div class="panel-body">
                    <img src="@Model.thisOrg.Image.icon_20" class="img-responsive img-relief" style="margin:0px auto 15px;" />
                    @using ( Html.BeginForm( "UploadOrgIcon20", "Admin", new { orgURL = Model.thisOrg.orgURL }, FormMethod.Post, new { enctype = "multipart/form-data", role = "form" } ) ) {
                        @Html.AntiForgeryToken();
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        Browse <input type="file" name="img20" id="img20" />
                                    </span>
                                </div>
                                <input class="form-control" readonly="" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success form-control">Upload new small icon</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(".btn-file :file").change(function () {
        var label = $(this).val().replace(/\\/g, '/').replace(/.*\//, '');
        $(this).parent().parent().parent().children().last().attr("value", label);
    });
</script>

