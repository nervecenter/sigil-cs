@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <script src="~/Scripts/jquery-1.8.3.js"></script>
    <script src="~/Scripts/jquery-ui-1.9.2.custom.min.js"></script>
    <link href="~/Content/jquery-ui-1.9.2.custom.min.css" rel="stylesheet" />

    <script type="text/javascript" src="~/Scripts/voting.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Site.css")
  

</head>
<body class="page">
    <div class="page-container">
        @if ( this.Context.Request.RequestContext.RouteData.Values[ "action" ].ToString() == "LandingPage" ) {
            // If we're on the landing page, load the landing header
            @Html.Partial( "_LandingHeader" )
        } else {
            // If we're on any other page, load the normal header; it will check if we're authenticated or not
            @Html.Partial("_Header")
        }
        @RenderBody()

    </div>
    @Html.Partial( "_Footer" )
    @RenderSection("scripts", required: false)
</body>
</html>
