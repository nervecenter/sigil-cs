<script src="~/Scripts/jquery-1.8.3.js"></script>
<script src="~/Scripts/jquery-ui-1.9.2.custom.min.js" type="text/javascript"></script>
<link href="~/Content/jquery-ui-1.9.2.custom.min.css" rel="stylesheet" />

<script type="text/javascript">
    $(function () { 
        $('#searchBox').autocomplete({
            source: '@Url.Action("SearchDB","Search")'
        });
    });
</script>

@{
    if ( this.Context.Request.RequestContext.RouteData.Values[ "action" ].ToString() != "LandingPage" ) {
        // If we're not going to the landing page
        <form class="search-box-form">
            <button class="search-submit-button" type="submit"><img src="../Content/Images/search-icon-small.png"></img></button>
            <input class="search-query" type="text" placeholder="Search for a company, organization, or person"></input>
        </form>
    } else {
        // If we're at the landing page
        <form class="search-box-form landing-search-form">
            <button class="search-submit-button landing-search-submit-button" type="submit"><img src="../Content/Images/search-icon-small.png"></img></button>
            <input class="search-query landing-search-query" type="text" placeholder="Search for a company, organization, or person"></input>
        </form>
    }
}
