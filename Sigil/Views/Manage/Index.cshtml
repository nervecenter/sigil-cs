@model Sigil.ViewModels.IndexViewModel
@using Sigil.Controllers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sigil - Account Settings";
}

<div class="col-md-9 col-lg-9">
    <div class="panel panel-default">
        <div class="panel-body">
            <p class="text-success">@ViewBag.StatusMessage</p>
            <div>
                <h3>Change your account settings</h3>
                @using ( Html.BeginForm( "User_Icon_Upload", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" } ) ) {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Password:</label><br />
                        @if ( Model.HasPassword ) {
                            @Html.ActionLink( "Change your password", "ChangePassword" )
                        } else {
                            @Html.ActionLink( "Create", "SetPassword" )
                        }
                    </div>
                    <div class="form-group">
                        <label>Social accounts:</label><br />
                        @*Model.Logins.Count*@
                        @Html.ActionLink( "Manage", "ManageLogins" )
                    </div>
                    <div class="form-group">
                        <label>Upload New User Icon</label><br />
                        <img src="@Model.UserVM.User.Image.icon_100" />
                        @*<img src="@Model.UserVM.User.Image.icon_20" />*@
                        @*using ( Html.BeginForm( "User_Icon_Upload", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" } ) ) {*@

                        @*<label for= "img" > New User Icon: </label>*@
                        <input type="file" name="img" id="img" />
                        <br />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

