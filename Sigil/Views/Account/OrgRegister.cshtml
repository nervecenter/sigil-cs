@model Sigil.Models.OrgRegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sigil - Register";
}

<div class="col-xs-9 col-md-8">
    <h2>Create a company page</h2>

    @using ( Html.BeginForm( "OrgRegister", "Account", FormMethod.Post, new { role = "form" } ) ) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary( "", new { @class = "text-danger" } )

        <div class="form-group">
            <label for="orgName">The name of your company as will display across Sigil</label><br />
            @Html.TextBoxFor( m => m.orgName, new { @class = "form-control", placeholder = "Company name" } )
        </div> 

        <div class="form-group">
            <label for="orgUrl">Enter a handle for your company's url (i.e. sigil.com/handle)</label><br />
            @Html.TextBoxFor( m => m.orgURL, new { @class = "form-control", placeholder = "Company handle" } )
        </div> 

        @*  
        @Html.TextBoxFor( m => m.orgTallBanner, new { @class = "form-control", type = "file", accept = "image/*", placeholder = "Large banner" } )

        @Html.TextBoxFor( m => m.orgShortBanner, new { @class = "form-control", type = "file", accept = "image/*", placeholder = "Small banner" } )

        @Html.TextBoxFor( m => m.orgLargeIcon, new { @class = "form-control", type = "file", accept = "image/*", placeholder = "A 100x100 icon or logo" } )

        @Html.TextBoxFor( m => m.orgSmallIcon, new { @class = "form-control", type = "file", accept = "image/*", placeholder = "A 20x20 icon or logo" } )
    
        @Html.TextAreaFor( m => m.orgMiscellanea, new { @class = "form-control", placeholder = "Information about your organization, who you as the applicant individual are, and a way we can contact you if we have any queries before adding you" } )
        *@

        <div class="form-group">
            <label for="Email">The email of your first privileged admin</label><br />
            @Html.TextBoxFor( m => m.Email, new { @class = "form-control", placeholder = "Admin email" } )
        </div> 

        <div class="form-group">
            @*Html.LabelFor( m => m.Email_confirm, new { @class = "col-md-2 control-label" } )*@
            @Html.TextBoxFor( m => m.Email_confirm, new { @class = "form-control", placeholder = "Confirm email" } )
        </div> 

        <div class="form-group">
            <label for="UserName">The username of your first privileged admin</label><br />
            @*Html.LabelFor( m => m.UserName, new { @class = "col-md-2 control-label" } )*@
            @Html.TextBoxFor( m => m.UserName, new { @class = "form-control", placeholder = "Admin username" } )
        </div> 

        <div class="form-group">
            <label for="Password">The password of your first privileged admin</label><br />
            @*Html.LabelFor( m => m.Password, new { @class = "col-md-2 control-label" } )*@
            @Html.PasswordFor( m => m.Password, new { @class = "form-control", placeholder = "Admin password" } )
        </div> 

        <div class="form-group">
            @*Html.LabelFor( m => m.ConfirmPassword, new { @class = "col-md-2 control-label" } )*@
            @Html.PasswordFor( m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" } )
        </div> 

        <button type="submit" class="btn btn-primary">Sign Up</button>
    }

    @section Scripts {
        @Scripts.Render( "~/bundles/jqueryval" )
    }
</div>