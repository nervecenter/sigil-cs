@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(function () {
        $('#orgBox').autocomplete({
            source: '@Url.Action("SearchOrgs","Search")'
        });
    });
</script>


<div class="main">
    <div class="first-column">
        <form method="post">
            <fieldset>
                <legend>Issue Information</legend>
                 <p>
                     <label for="text">Orginization:</label>
                     <input id ="orgBox" type="text" name="orgName" value="@Request.Form["orgName"]" />
                 </p>   
                <p>
                    <label for="text">Title:</label>
                    <input type="text" name="title" value="@Request.Form["title"]" />
                </p>
                <p>
                    <label for="text">Text:</label>
                    <input type="text" name="text" value="@Request.Form[ "text" ]" />
                    @Html.ValidationMessage("text")
                </p>
                <p><input type="submit" name="buttonSubmit" value="Add Issue" /></p>
            </fieldset>
        </form>

    </div>
</div>
